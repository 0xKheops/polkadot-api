{
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@unstoppablejs/provider --workspace=@unstoppablejs/utils && npm run build --workspace=@unstoppablejs/ws-provider --workspace=@unstoppablejs/client",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "test": "npm run test --workspaces",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@types/jest": "^27.0.2",
    "esbuild": "^0.13.13",
    "husky": ">=6",
    "jest": "^27.2.4",
    "lint-staged": ">=11.2.0",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  }
}
